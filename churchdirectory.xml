<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
    <!-- Note: we can use method="upgrade" to ensure an upgrade regardless of
   	if it is a new install or an actual upgrade; Normal installs will
   	behave like an install but upgrades will be treated appropriately even
   	if the interface doesn't support it properly -->

    <!-- Generic Metadata -->
    <name>COM_CHURCHDIRECTORY</name>
    <author>Joomla Bible Study Team</author>
    <copyright>(C) 2007 - 2012 Joomla Bible Study Team All rights reserved</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>1.7.6</version>
    <creationDate>December 2012</creationDate>
    <authorEmail>info@joomlabiblestudy.org</authorEmail>
    <authorUrl>http://www.joomlabiblestudy.org</authorUrl>
    <description>COM_CHURCHDIRECTORY_XML_DESCRIPTION</description>

    <!-- Installer Hooks -->
    <scriptfile>churchdirectory.script.php</scriptfile>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8" folder="sql">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update> <!-- Runs on update; New in 1.6 -->
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <files folder="site">
        <filename>churchdirectory.php</filename>
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>metadata.xml</filename>
        <filename>router.php</filename>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>language</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>
    <media destination="com_churchdirectory" folder="media">
        <folder>images</folder>
        <folder>css</folder>
        <folder>js</folder>
        <folder>jui</folder>
        <filename>index.html</filename>
    </media>

    <administration>
        <menu img="../media/com_churchdirectory/images/menu/icon-16-churchdirectory.png">COM_CHURCHDIRECTORY</menu>
        <submenu>
            <menu link="option=com_churchdirectory&amp;view=cpanel" img="../media/com_churchdirectory/images/menu/icon-16-churchdirectory.png" alt="Churchdirectory/Cpanel">COM_CHURCHDIRECTORY_CPANEL</menu>
            <menu link="option=com_churchdirectory&amp;view=members" img="../media/com_churchdirectory/images/menu/icon-16-members.png" alt="Churchdirectory/Contacts">COM_CHURCHDIRECTORY_MEMBERS</menu>
            <menu link="option=com_categories&amp;extension=com_churchdirectory" view="categories" img="class:contact-cat" alt="Churchdirectory/Categories">COM_CHURCHDIRECTORY_CATEGORIES</menu>
            <menu link="option=com_churchdirectory&amp;view=info" img="../media/com_churchdirectory/images/menu/icon-16-info.png" alt="Churchdirectory/Info">COM_CHURCHDIRECTORY_INFO</menu>
            <menu link="option=com_churchdirectory&amp;task=kml.edit&amp;id=1" img="../media/com_churchdirectory/images/menu/icon-16-kml.png" alt="Churchdirectory/KML">COM_CHURCHDIRECTORY_KML</menu>
            <menu link="option=com_churchdirectory&amp;view=familyunits" img="../media/com_churchdirectory/images/menu/icon-16-familyunit.png" alt="Churchdirectory/Family Units">COM_CHURCHDIRECTORY_FAMILYUNIT</menu>
            <menu link="option=com_churchdirectory&amp;view=dirheaders" img="../media/com_churchdirectory/images/menu/icon-16-dirheader.png" alt="Churchdirectory/DirectoryHeaders">COM_CHURCHDIRECTORY_DIRHEADER</menu>
            <menu link="option=com_churchdirectory&amp;view=positions" img="../media/com_churchdirectory/images/menu/icon-16-position.png" alt="Churchdirectory/Positions">COM_CHURCHDIRECTORY_POSITIONS</menu>
        </submenu>
        <files folder="admin">
            <filename>access.xml</filename>
            <filename>churchdirectory.php</filename>
            <!-- Holder for churchdirectory.scropt.php -->
            <!-- Holder for churchdirectory.xml -->
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <folder>controllers</folder>
            <folder>help</folder>
            <folder>helpers</folder>
            <folder>language</folder>
            <folder>liveupdate</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
    </administration>

    <!-- Extension Update Specification -->
    <!-- @todo BCC need to corecot Church Directory Compnonet update address -->
    <!-- <update> -->
    <!-- <server type="extension" priority="1" name="Primary Update Server">http://update.example.com/update/alpha.xml</server> --> <!-- useful for single extensions -->
    <!-- <server type="extension" priority="2" name="Secondary Update Server">http://update2.example.com/update/alpha.xml</server> --> <!--  as above, backup server -->
    <!-- <server type="collection" priority="3" name="Update Collection">http://update.example.com/update/list.xml</server> --> <!-- useful for collections of extensions -->
    <!-- <server type="xmlrpc" priority="4" name="Joomla! Extensions Directory">http://update.extensions.joomla.org</server> --><!-- useful for large collections -->
    <!-- </update> -->


    <!-- Tables -->
    <!-- These are used for backups to determine which tables to backup; ones marked optional are only backed up if they exist -->
    <tables>
        <table>#__churchdirectory_details</table>
        <table>#__churchdirectory_dirheader</table>
        <table>#__churchdirectory_familyunit</table>
        <table>#__churchdirectory_kml</table>
        <table>#__churchdirectory_position</table>
        <table type="optional">#__churchdirectory_update</table>
    </tables>

    <!--  Dependencies -->
    <dependencies>
        <dependency type="platform" name="joomla" operator="=" version="2.5" />
    </dependencies>
</extension>
