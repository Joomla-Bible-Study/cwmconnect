<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="2.5" type="template" method="upgrade">

    <name>churchdirectory_print</name><!-- name the template -->
    <creationDate>2012-10-30</creationDate><!-- the date your are beginn to code -->
    <author>Joomla Bible Study Team</author><!-- your name (oops, I repeat myself) -->
    <copyright>Copyright Â© 2012 joomlabiblestudy.org</copyright><!-- for who you are coding -->
    <authorEmail>info@joomlabiblestudy.org</authorEmail><!-- your email address -->
    <authorUrl>http://www.joomlabiblestudy.org</authorUrl><!-- your url -->
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license><!-- License -->
    <version>1.0.0</version><!-- give your template a number -->
    <description><![CDATA[
		<h1>templatename</h1>
		<p><img src="../templates/churchdirectory_print/template_preview.png" /></p>
		<h2>Module positions</h2>
		<ol>
			<li>debug</li>
		</ol>
		<p>Created by <a href="http://www.example.com" target="_blank">your name | example.com</a>.</p>
	]]></description><!-- change the description as you like -->

    <files><!-- no need to change -->
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <filename>apple-touch-icon-57x57.png</filename>
        <filename>apple-touch-icon-72x72.png</filename>
        <filename>apple-touch-icon-114x114.png</filename>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>favicon.ico</filename>
        <filename>index.php</filename>
        <filename>offline.php</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>templateDetails.xml</filename>
    </files>

    <languages folder="language"><!-- no need to change -->
        <language tag="en-GB">en-GB.tpl_churchdirectory_print.ini</language>
    </languages>

    <positions><!-- define the positions for modules here -->
        <position>debug</position>
    </positions>

    <config><!-- no need to change -->
        <fields name="params">
            <fieldset name="basic">
                <!-- MODERNIZR-->
                <field name="modernizr" type="radio" default="1" label="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_MODERNIZR_LABEL" description="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_MODERNIZR_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_MODERNIZR_DOC" type="spacer" hr="false" />
                <field type="spacer" hr="true" />
                <!-- TWITTER BOOTSTRAP-->
                <field name="bootstrap" type="radio" default="0" label="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_BOOTSTRAP_LABEL" description="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_BOOTSTRAP_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_BOOTSTRAP_DOC" type="spacer" hr="false" />
                <field type="spacer" hr="true" />
                <!-- CSS Compressor-->
                <field name="compressor" type="radio" default="1" label="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_COMPRESSOR_LABEL" description="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_COMPRESSOR_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_COMPRESSOR_DOC" type="spacer" hr="false" />
                <field type="spacer" hr="true" />
                <!-- LESS-->
                <field name="less" type="radio" default="0" label="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_LESS_LABEL" description="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_LESS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_LESS_DOC" type="spacer" hr="false" />
                <field type="spacer" hr="true" />
                <!-- PIE-->
                <field name="pie" type="radio" default="0" label="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_PIE_LABEL" description="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_PIE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="TPL_CHURCHDIRECTORY_PRINT_PARAMETER_PIE_DOC" type="spacer" hr="false" />
            </fieldset>
        </fields>
    </config>

</extension>
