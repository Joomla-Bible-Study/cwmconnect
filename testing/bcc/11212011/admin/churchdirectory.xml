<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.7" method="upgrade">
	<!-- Note: we can use method="upgrade" to ensure an upgrade regardless of
	if it is a new install or an actual upgrade; Normal installs will
	behave like an install but upgrades will be treated appropriately even
	if the interface doesn't support it properly -->
	<!-- Generic Metadata -->
	<name>ChurchDirectory</name>
	<author>NFSDA</author>
	<authorEmail>it@nfsda.org</authorEmail>
	<authorUrl>www.nfsda.org</authorUrl>
	<copyright>Copyright (C) 2011 NFSDA. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>1.7.0</version>
	<creationDate>June 2011</creationDate>
	<description></description>

	<!-- Installer Hooks -->
	<!-- <installfile>install.churchdirectory.php</installfile> Deprecated in 1.6 -->
	<!-- <uninstallfile>file.uninstall.php</uninstallfile> Deprecated in 1.6 -->
	<scriptfile>file.script.php</scriptfile> <!-- New in 1.6 -->

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8" folder="sql">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
			<schemapath type="sqlsrv">sql/updates/sqlsrv</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>churchdirectory.php</filename>
		<filename>controller.php</filename>
		<filename>metadata.xml</filename>
		<filename>router.php</filename>
		<filename>index.html</filename>
		<folder>controllers</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>includes</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<languages folder="languages/site">
		<language tag="en-GB">en-GB.com_churchdirectory.ini</language>
		<language tag="it-IT">it-IT.com_churchdirectory.ini</language>
	</languages>

	<media destination="com_churchdirectory">
		<!-- <filename>com_chruchdirectory.jpg</filename> -->
	</media>

	<administration>
		<menu view="cpanel" img="../components/com_churchdirectory/images/homemenu.png" alt="Church Directory">ChurchDirectory</menu>
		<submenu>
		<menu img="" link="option=com_churchdirectory">Contacts</menu>
		<menu img="" link="option=com_categories&amp;section=com_churchdirectory_details">Categories</menu>
		<menu img="" link="option=com_churchdirectory&amp;controller=tools">Tools</menu>
		<menu img="" link="option=com_churchdirectory&amp;view=info">Info</menu>
		</submenu>
			<files folder="admin">
				<filename>admin.churchdirectory.php</filename>
				<filename>controller.php</filename>
				<filename>churchdirectory_cfg.xml</filename>
				<filename>contact_items.xml</filename>
				<filename>index.html</filename>
				<folder>controllers</folder>
                                <folder>custom</folder>
                                <folder>elements</folder>
                                <folder>fonts</folder>
                                <folder>helpers</folder>
				<folder>models</folder>
                                <folder>sql</folder>
                                <folder>tables</folder>
				<folder>views</folder>
			</files>

		<!-- Legacy 1.5 Language Support -->
		<!-- Note: Replace this with the actual path to the language file -->
			<languages folder="languages/admin">
				<language tag="en-GB">en-GB.com_churchdirectory.ini</language>
				<language tag="en-GB">en-GB.com_churchdirectory.menu.ini</language>
				<language tag="it-IT">it-IT.com_churchdirectory.ini</language>
				<language tag="it-IT">it-IT.com_churchdirectory.menu.ini</language>
			</languages>
	</administration>

		<!-- Extension Update Specification -->
                <!-- @todo BCC need to corecot Church Directory Compnonet update address -->
	<updateservers>
		<server type="extension" priority="1" name="Extension Update Site">http://joomlacode.org/svn/churchdirectory/update/extension.xml</server> <!-- useful for single extensions -->
		<server type="collection" priority="2" name="Collection Update Site">http://joomlacode.org/svn/churchdirectory/update/update.xml</server><!-- useful for collections of extensions -->
	</updateservers>

	<!-- Tables -->
	<!-- These are used for backups to determine which tables to backup; ones marked optional are only backed up if they exist -->
	<tables>
		<table>#__churchdirectory_install</table>
		<table type="optional">#__churchdirectory_update</table>
	</tables>

	<!--  Dependencies -->
	<dependencies>
		<dependency type="platform" name="joomla" operator="=" version="1.5" />
	</dependencies>
</extension>