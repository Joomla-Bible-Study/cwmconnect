			name="Joomla Bible Study Podcast Plg"><![CDATA[http://www.joomlabiblestudy.org/index.php?option=com_ars&view=update&task=stream&format=xml&id=8]]>
        </server>
    </updateservers> -->
        	<!-- Dependencies -->
    <dependencies>
        <dependency type="platform" name="joomla" operator="="
			version="1.6" />
    </dependencies>
</extension>
