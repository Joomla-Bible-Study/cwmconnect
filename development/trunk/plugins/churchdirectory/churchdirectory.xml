<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.7/plugen-install.dtd">
<extension version="1.7" type="plugin" group="search">
    <name>PLG_SEARCH_CHURCHDIRECTORY</name>
    <author>Joomla Bible Study Team</author>
    <creationDate>November 2011</creationDate>
    <copyright>(C) 2007 - 2011 Joomla Bible Study Team All rights reserved</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>info@joomlabiblestudy.org</authorEmail>
    <authorUrl>http://www.joomlabiblestudy.org</authorUrl>
    <version>1.7.0</version>
    <description>PLG_SEARCH_CHURCHDIRECTORY_XML_DESCRIPTION</description>
    <files>
        <filename plugin="churchdirectory">churchdirectory.php</filename>
        <folder>language</folder>
        <filename>index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit" type="text"
					default="50"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>
                <field name="search_content" type="radio"
					default="0"
					description="JFIELD_PLG_SEARCH_ALL_DESC"
					label="JFIELD_PLG_SEARCH_ALL_LABEL"
				>
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>
                <field name="search_archived" type="radio"
					default="0"
					description="JFIELD_PLG_SEARCH_ARCHIVED_DESC"
					label="JFIELD_PLG_SEARCH_ARCHIVED_LABEL"
				>
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>
            </fieldset>
        </fields>
    </config>
        	<!-- UPDATESERVER DEFINITION -->
